# Copy to .env and fill in values. Used by tools/run_local.sh

# Jira
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_ACCESS_TOKEN=
JIRA_CLIENT_ID=
JIRA_CLIENT_SECRET=
JIRA_REFRESH_TOKEN=

# Confluence
CONF_BASE_URL=https://your-domain.atlassian.net/wiki
CONF_ACCESS_TOKEN=
CONF_CLIENT_ID=
CONF_CLIENT_SECRET=
CONF_REFRESH_TOKEN=

# TLS/SSL
# Set to false/0/no/off to disable certificate verification (use only in trusted environments)
MCP_SSL_VERIFY=true
# Absolute path to a custom CA bundle (PEM) if needed
MCP_CA_BUNDLE=
