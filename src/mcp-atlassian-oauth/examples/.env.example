# Copy to .env and fill in values. Used by tools/run_local.sh
# Replace placeholders with your actual values before running.

# Jira OAuth / Tokens
JIRA_BASE_URL=https://your-jira.example.com
JIRA_CLIENT_ID=__JIRA_CLIENT_ID__
JIRA_CLIENT_SECRET=__JIRA_CLIENT_SECRET__
JIRA_REFRESH_TOKEN=__JIRA_REFRESH_TOKEN__
JIRA_ACCESS_TOKEN=

# Confluence OAuth / Tokens
CONF_BASE_URL=https://your-confluence.example.com/wiki
CONF_CLIENT_ID=__CONF_CLIENT_ID__
CONF_CLIENT_SECRET=__CONF_CLIENT_SECRET__
CONF_REFRESH_TOKEN=__CONF_REFRESH_TOKEN__
CONF_ACCESS_TOKEN=

# TLS / Corp CA
MCP_SSL_VERIFY=true
MCP_CA_BUNDLE=

# Proxy handling
# Set to "false" to ignore HTTP(S)_PROXY/NO_PROXY from the environment for this server.
MCP_HTTP_TRUST_ENV=true
# If you keep it true, tune NO_PROXY for intranet hosts/domains.
NO_PROXY=localhost,127.0.0.1,.internalcorpsite.com

# Defaults
MCP_PREFERRED_USER=automation.bot
JIRA_DEFAULT_PROJECT=ENG
CONF_DEFAULT_SPACE=DOCS
MCP_DEFAULT_OUTPUT_FORMAT=markdown

# HTTP transport (for remote URL mode)
MCP_TRANSPORT=stdio
MCP_HOST=0.0.0.0
MCP_PORT=8765
MCP_PATH=/mcp

# Logging
LOG_LEVEL=info
LOG_FILE=/absolute/path/for/log/file
