{
  "servers": [
    {
      "name": "oracle.atlassian.oauth (stdio)",
      "command": "/absolute/path/to/your/venv/bin/python",
      "args": ["-m", "mcp_atlassian_oauth"],
      "env": {
        "MCP_TRANSPORT": "stdio",
        "JIRA_BASE_URL": "https://your-domain.atlassian.net",
        "JIRA_CLIENT_ID": "",
        "JIRA_CLIENT_SECRET": "",
        "JIRA_REFRESH_TOKEN": "",
        "JIRA_ACCESS_TOKEN": "",
        "CONF_BASE_URL": "https://your-domain.atlassian.net/wiki",
        "CONF_CLIENT_ID": "",
        "CONF_CLIENT_SECRET": "",
        "CONF_REFRESH_TOKEN": "",
        "CONF_ACCESS_TOKEN": "",
        "MCP_SSL_VERIFY": "true",
        "MCP_CA_BUNDLE": "",
        "MCP_PREFERRED_USER": "automation.bot",
        "JIRA_DEFAULT_PROJECT": "ENG",
        "CONF_DEFAULT_SPACE": "DOCS",
        "MCP_DEFAULT_OUTPUT_FORMAT": "markdown"
      },
      "disabled": false,
      "autoApprove": []
    },
    {
      "name": "oracle.atlassian.oauth (http)",
      "url": "http://localhost:8765/mcp",
      "disabled": false,
      "type": "streamableHttp",
      "autoApprove": []
    }
  ]
}
